<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#dddddd">

        <ImageView
                android:id="@+id/imgCurrency"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        <TextView
                android:id="@+id/txtCurrencyName"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_toEndOf="@id/imgCurrency"
                android:layout_marginStart="15dp"
                android:textSize="16sp"
                android:includeFontPadding="false"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_alignStart="@id/txtCurrencyName"
                android:layout_alignBottom="@id/imgCurrency">

            <TextView
                    android:id="@+id/txtCredit"
                    style="@style/ExchangeRateAmount"
                    android:textColor="#4444ff"/>

            <TextView
                    android:id="@+id/txtDebit"
                    style="@style/ExchangeRateAmount"
                    android:textColor="#ff4444"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>